<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.HomeFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="1. What is the mushroom's gill color?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="yellow? red? buff? "
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="2. The number of rings on the mushroom?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="One? Two? or None?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="3. What type of ring does it have?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="is it pendant? or large?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="4. The population of the mushroom"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="is it abundant? or several?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="5. In which habitat is it found?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Woods? urban?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="6. Does it have bruises?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q6"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Yes or No?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="7. What is the mushroom's gill size?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="is it broad or narrow?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="8. What is the mushroom's spore print color?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q8"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="is it black? or white? or..."
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="9. What is the mushroom's cap shape?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q9"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="does it look like a bell?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="10. What is the mushroom's cap surface texture?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q10"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="is it smooth? or groovy?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="11. What is the mushroom's cap color?"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="16dp"
      />

    <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/q11"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="16dp"
      style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

      <AutoCompleteTextView
        android:id="@+id/ac11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="is it brown? or buff?"
        android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
      style="?android:attr/buttonBarStyle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:orientation="vertical"
      android:layout_gravity="center"
      >

      <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
          style="?attr/materialButtonOutlinedStyle"
          android:id="@+id/predictBtn"
          android:backgroundTint="@color/pastel_green"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black_calm"
          android:text="Predict"
          />
        <Button
          style="?attr/materialButtonOutlinedStyle"
          android:id="@+id/clearBtn"
          android:backgroundTint="@color/pastel_red"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/black_calm"
          android:text="Clear"
          />
      </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>

  </LinearLayout>

</ScrollView>